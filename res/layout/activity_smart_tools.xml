<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SmartToolsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10sp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/leftarrow"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/leftarrow"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Smart Tools"
                android:textSize="27sp"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:textStyle="bold"
                android:textColor="@color/violet"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/bodyview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/heading">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/body1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10sp"
                android:layout_below="@id/body1">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cashcountercard"
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="10sp"
                    app:cardElevation="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/cashcounterimage"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/cashcounter"
                            android:layout_gravity="center"
                            android:layout_marginTop="15sp"/>
                        <TextView
                            android:id="@+id/cashcountertext"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:text="నగదు కౌంటర్"
                            android:gravity="center"
                            android:layout_marginLeft="25sp"
                            android:layout_marginTop="10sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/countercard"
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="10sp"
                    app:cardElevation="5dp"
                    android:layout_marginLeft="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/counterimage"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/counter"
                            android:layout_gravity="center"
                            android:layout_marginTop="15sp"/>
                        <TextView
                            android:id="@+id/countertext"
                            android:layout_width="60dp"
                            android:layout_height="20dp"
                            android:text="కౌంటర్"
                            android:layout_marginTop="10sp"
                            android:gravity="center"
                            android:layout_marginLeft="25sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/computershortcutscard"
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="10sp"
                    app:cardElevation="5dp"
                    android:layout_marginLeft="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/computerimage"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/computer"
                            android:layout_gravity="center"
                            android:layout_marginTop="15sp"/>
                        <TextView
                            android:id="@+id/computertext"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:text="
కంప్యూటర్ సత్వరమార్గాలు"
                            android:gravity="center"
                            android:layout_marginLeft="15sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>