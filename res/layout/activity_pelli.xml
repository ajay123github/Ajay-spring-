<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PelliActivity"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nitracouples"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/nitracouples"/>

            <TextView
                android:id="@+id/nitra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="
నిత్ర"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/red"
                android:layout_below="@id/nitracouples"
                />

            <TextView
                android:id="@+id/matrimony"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="
తెలుగు మ్యాట్రిమోని"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="35sp"
                android:textColor="@color/lightgreen"
                android:layout_below="@id/nitra"
                />
            <TextView
                android:id="@+id/ku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="కు
"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/lightgreen"
                android:layout_below="@id/matrimony"
                />
            <TextView
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="స్వాగతం"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/red"
                android:layout_below="@id/ku"
                />

            <TextView
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Profile Register"
                android:gravity="center"
                android:layout_below="@id/welcome"
                android:layout_marginTop="40sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/descriptive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By clicking continue to register, you are acceptinh our "
                android:gravity="center"
                android:layout_below="@id/register"
                android:layout_marginTop="16sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms and conditions"
                android:gravity="center"
                android:layout_below="@id/descriptive"
                android:layout_marginTop="16sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:textColor="@color/blue"
                android:textStyle="normal"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:gravity="center"
                android:layout_below="@id/terms"
                android:layout_marginTop="16sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:textColor="@color/blue"
                android:textStyle="normal"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/registerbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue to Register"
                android:textColor="@color/white"
                android:backgroundTint="@color/red"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_marginTop="10sp"
                android:layout_below="@id/policy"/>

            <ImageView
                android:id="@+id/safestamp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/safestamp"
                android:layout_below="@id/registerbutton"
                android:layout_marginTop="40sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/safestamp"
                android:layout_marginTop="20sp"
                android:gravity="center"
                android:layout_marginLeft="40sp">
                <TextView
                    android:id="@+id/N"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="N"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    android:background="@color/blue"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/I"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="I"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    android:background="@color/yellow"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/T"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="T"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/H"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="H"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    android:background="@color/violet"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/R"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="R"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    android:background="@color/lightgreen"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/A"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="A"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:textStyle="bold"
                    android:paddingRight="10sp"
                    android:gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>