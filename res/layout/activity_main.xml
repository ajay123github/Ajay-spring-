<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/nitraimage"
            android:layout_width="220dp"
            android:layout_height="250dp"
            android:src="@drawable/nitracalender"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="70dp"

            />

        <TextView
            android:id="@+id/taginfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50+ లక్షల మంది ప్రజల హృదయాలను
            గెలుచుకున్నారు"
            android:textSize="24sp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:layout_below="@id/nitraimage"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:gravity="center"/>


        <TextView
            android:id="@+id/nitra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="నిత్ర"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="60sp"
            android:layout_below="@id/taginfo"
            android:gravity="center"
            android:layout_marginTop="50sp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/calender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="క్యాలెండర్"
            android:textColor="@color/violet"
            android:textStyle="bold"
            android:textSize="50sp"
            android:layout_below="@id/nitra"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="20dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/calender"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:layout_marginLeft="40sp">
            <TextView
                android:id="@+id/N"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="N"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:textStyle="bold"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/I"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="I"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/yellow"
                android:textStyle="bold"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/T"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="T"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/red"
                android:textStyle="bold"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/H"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="H"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/violet"
                android:textStyle="bold"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/R"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="R"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/lightgreen"
                android:textStyle="bold"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/A"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="A"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:background="@color/red"
                android:textStyle="bold"
                android:paddingRight="10sp"
                android:gravity="center"
                />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>