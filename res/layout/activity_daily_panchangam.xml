<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DailyPanchangam"
    >


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="350sp"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="15sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="320sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5sp"
                    >
                    <TextView
                        android:id="@+id/month"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:text=""
                        android:textSize="19sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginLeft="20sp"/>
                    <TextView
                        android:id="@+id/ipen"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:text="-"
                        android:textSize="19sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/day"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:text=""
                        android:textSize="19sp"
                        android:gravity="center"
                        android:textStyle="bold"/>

                </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout2"
                        android:layout_width="320sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5sp"
                        >

                        <ImageView
                            android:id="@+id/leftarrow"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="15sp"
                            android:src="@drawable/leftarrows"
                            android:backgroundTint="@color/red"
                            />
                        <TextView
                            android:id="@+id/date"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30sp"
                            android:text=""
                            android:textSize="35sp"
                            android:textColor="@color/red"
                            android:gravity="center"
                            android:textStyle="bold"/>

                        <ImageView
                            android:id="@+id/rightarrow"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="15sp"
                            android:layout_marginLeft="30sp"
                            android:src="@drawable/rightarrow"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout3"
                        android:layout_width="320sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/maasam"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="19sp"
                            android:layout_marginLeft="-5dp"
                            android:gravity="center"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/ruthuvu"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="19sp"
                            android:gravity="center"
                            android:layout_marginLeft="-5dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/yanam"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:gravity="center"
                            android:textSize="19sp"
                            android:layout_marginLeft="-5dp"
                            android:textStyle="bold"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                app:cardElevation="5dp"
                app:cardCornerRadius="15sp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:id="@+id/hlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/red"
                        >
                        <TextView

                            android:layout_width="175sp"
                            android:layout_height="wrap_content"
                            android:text="సూర్యోదయం"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:gravity="center"/>

                        <TextView

                            android:layout_width="175sp"
                            android:layout_height="wrap_content"
                            android:text="సూర్యాస్తమయం"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/h2layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">
                        <TextView
                            android:id="@+id/suryodhayam"
                            android:layout_width="175sp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:gravity="center"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="25dp"
                            android:background="@color/red"
                            android:layout_marginTop="10sp"/>
                        <TextView
                            android:id="@+id/suryasthamayam"
                            android:layout_width="175sp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:gravity="center"
                            android:layout_marginBottom="10sp"
                            android:layout_marginTop="10sp"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                app:cardElevation="5dp"
                app:cardCornerRadius="15sp"
                >
                <LinearLayout
                    android:id="@+id/Layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                   >

                <LinearLayout
                    android:id="@id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:id="@+id/htlayout"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="175sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:text="తిథి "
                            android:textColor="@color/red"
                            android:textSize="22sp"
                            android:gravity="center"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/thidhi"
                            android:layout_width="175sp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:gravity="center"
                            android:layout_marginTop="10sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hnlayout"
                        android:layout_width="169sp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="169sp"
                            android:layout_height="wrap_content"
                            android:text="నక్షత్రం "
                            android:textColor="@color/red"
                            android:layout_marginTop="10sp"
                            android:textSize="19sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/nakshatram"
                            android:layout_width="169sp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:gravity="center"
                            android:layout_marginTop="10sp"
                            />
                    </LinearLayout>

                </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/black"/>

                <LinearLayout
                    android:id="@id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp"
                    >

                    <LinearLayout
                        android:id="@+id/hylayout"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="175sp"
                            android:layout_height="wrap_content"
                            android:text="యోగం"
                            android:textColor="@color/red"
                            android:textSize="22sp"
                            android:gravity="center"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/yogam"
                            android:layout_width="175sp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:gravity="center"
                            android:layout_marginTop="10sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hklayout"
                        android:layout_width="169sp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:layout_marginBottom="10sp">
                        <TextView
                            android:layout_width="169sp"
                            android:layout_height="wrap_content"
                            android:text="కారణం"
                            android:textColor="@color/red"
                            android:textSize="22sp"
                            android:gravity="center"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/karanam"
                            android:layout_width="169sp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:gravity="center"
                            android:layout_marginTop="10sp"/>
                    </LinearLayout>

                </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                app:cardElevation="5dp"
                app:cardCornerRadius="15sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="శుభ సమయములు"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:background="@color/red"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/goodtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="19sp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card5"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                app:cardElevation="5dp"
                app:cardCornerRadius="15sp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:id="@+id/hrylayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/red"
                        >
                        <TextView

                            android:layout_width="175sp"
                            android:layout_height="wrap_content"
                            android:text="రాహు కాలం"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:gravity="center"/>

                        <TextView

                            android:layout_width="175sp"
                            android:layout_height="wrap_content"
                            android:text="యమగండం"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hry2layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="10sp">
                        <TextView
                            android:id="@+id/rahukalam"
                            android:layout_width="175sp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:gravity="center"
                            />
                       <View
                           android:layout_width="1dp"
                           android:layout_height="25dp"
                           android:background="@color/red"/>
                        <TextView
                            android:id="@+id/yamagandam"
                            android:layout_width="175sp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:gravity="center"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card6"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                app:cardElevation="5dp"
                app:cardCornerRadius="15sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="దుర్ముహూర్తం"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:background="@color/red"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/badtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="19sp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card7"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                app:cardElevation="5dp"
                app:cardCornerRadius="15sp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:id="@+id/hvalayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/red"
                        >
                        <TextView

                            android:layout_width="175sp"
                            android:layout_height="wrap_content"
                            android:text="వర్జం"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:gravity="center"/>

                        <TextView

                            android:layout_width="175sp"
                            android:layout_height="wrap_content"
                            android:text="అమృతగడియాలు"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/havlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="10sp">
                        <TextView
                            android:id="@+id/varjam"
                            android:layout_width="175sp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:gravity="center"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="50dp"
                            android:background="@color/red"/>
                        <TextView
                            android:id="@+id/amruthatimings"
                            android:layout_width="175sp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:gravity="center"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card8"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                app:cardElevation="5dp"
                app:cardCornerRadius="15sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="మంగళం మహత్
"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:background="@color/red"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/sri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="శ్రీ శ్రీ శ్రీ శ్రీ శ్రీ శ్రీ"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:background="@color/red"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>