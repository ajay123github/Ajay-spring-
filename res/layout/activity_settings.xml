<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10sp"
        app:cardElevation="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="24sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:textStyle="bold"
            android:textColor="@color/violet"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Options"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_below="@id/heading"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="10sp"
        />

    <TextView
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save the date details"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_below="@id/options"
        android:textSize="30sp"
        android:layout_marginLeft="33sp"
        android:layout_marginTop="16sp"/>

    <TextView
        android:id="@+id/retriew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="retriew the date details"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_below="@id/save"
        android:textSize="30sp"
        android:layout_marginLeft="33sp"
        android:layout_marginTop="16sp"/>

    <TextView
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="update the date details"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_below="@id/retriew"
        android:textSize="30sp"
        android:layout_marginLeft="33sp"
        android:layout_marginTop="16sp"/>

    <TextView
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delete the date details"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_below="@id/update"
        android:textSize="30sp"
        android:layout_marginLeft="33sp"
        android:layout_marginTop="16sp"/>

    <TextView
        android:id="@+id/options_fruits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Options(fruits)"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_below="@id/delete"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="10sp"
        />

    <TextView
        android:id="@+id/fruitsave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save the fruits details"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_below="@id/options_fruits"
        android:textSize="30sp"
        android:layout_marginLeft="33sp"
        android:layout_marginTop="16sp"/>

    <TextView
        android:id="@+id/fruitretriew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="retriew the fruits details"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_below="@id/fruitsave"
        android:textSize="30sp"
        android:layout_marginLeft="33sp"
        android:layout_marginTop="16sp"/>

    <TextView
        android:id="@+id/fruitupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="update the fruits details"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_below="@id/fruitretriew"
        android:textSize="30sp"
        android:layout_marginLeft="33sp"
        android:layout_marginTop="16sp"/>

    <TextView
        android:id="@+id/fruitdelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delete the fruits details"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_below="@id/fruitupdate"
        android:textSize="30sp"
        android:layout_marginLeft="33sp"
        android:layout_marginTop="16sp"/>


</RelativeLayout>