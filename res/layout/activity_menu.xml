<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        >
        <LinearLayout
            android:id="@+id/cardlayout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/lightgreen">
            <ImageView
                android:id="@+id/image"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:src="@drawable/kubera"/>
            <TextView
                android:id="@+id/descriptive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ఈ కుబేర బొమ్మను కొనండి మీ ఇంట్లో సుఖాలే

కేవలం రూ.50/-
మాత్రమే స్వరపదండి"
                android:textStyle="bold"
                android:textColor="@color/violet"
                android:textSize="20dp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="20sp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    
    <FrameLayout
        android:id="@+id/fragmentcontainer"
        android:layout_width="match_parent"
        android:layout_below="@id/cardview"
        android:layout_height="450dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/rose"
        android:layout_below="@id/fragmentcontainer"

        >
        <LinearLayout
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="7dp"
            android:paddingRight="7dp">
            <ImageView
                android:id="@+id/homeimage"
                android:layout_width="70sp"
                android:layout_height="40sp"
                android:src="@drawable/homeicon"/>
            <TextView
                android:id="@+id/hometext"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:text="Home"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/home"
            android:paddingLeft="7dp"
            android:paddingRight="7dp">
            <ImageView
                android:id="@+id/servicesimage"
                android:layout_width="70sp"
                android:layout_height="40sp"
                android:src="@drawable/servicesicon"/>
            <TextView
                android:id="@+id/servicestext"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:text="Services"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/smarttools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/services"
            android:paddingLeft="7dp"
            android:paddingRight="7dp">
            <ImageView
                android:id="@+id/smarttoolsimage"
                android:layout_width="70sp"
                android:layout_height="40sp"
                android:src="@drawable/smarttools"/>
            <TextView
                android:id="@+id/smarttoolstext"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:text="Tools"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/smarttools"
            android:paddingLeft="7dp"
            android:paddingRight="7dp">
            <ImageView
                android:id="@+id/settingsimage"
                android:layout_width="70sp"
                android:layout_height="40sp"
                android:src="@drawable/baseline_settings_24"/>
            <TextView
                android:id="@+id/settingstext"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:text="Settings"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>